{
  "name": "server",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node ./dist/index.js",
    "server": "nodemon ./dist/index.js",
    "watch": "tsc -w",
    "dev": "concurrently \"npm run watch\" \"npm run server\" \"npm run watch-views\"",
    "build": "tsc && npm run copy-files",
    "copy-files": "copyfiles -u 1 \"./src/views/**/*\" dist/ ",
    "watch-views": "nodemon --watch src/views -e ejs -x \"npm run copy-files\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@prisma/client": "^6.11.1",
    "bullmq": "^5.56.3",
    "concurrently": "^9.2.0",
    "cors": "^2.8.5",
    "dotenv": "^17.0.1",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "nodemailer": "^7.0.5",
    "prisma": "^6.11.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "copyfiles": "^2.4.1",
    "nodemon": "^3.1.10",
    "typescript": "^5.8.3"
  }
}
